<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('partials/header'); %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header><%- include('partials/navbar'); %></header>
    <div class="header-recomendation">
      <h2>Hello, ‘@Username’</h2>
      <p>Tenemos algunas recomendaciones para usted</p>
    </div>

    <div class="container-recommendation">
      <div class="galery-recommendation">
        <% productos.slice(0, 3).forEach(producto => { %> <%-
        include('partials/card-recommendation', { producto: producto }); %> <%
        }); %>
      </div>
      <ul class="docks">
        <li class="dock">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            fill="none"
          >
            <circle
              cx="8"
              cy="8"
              r="7.73333"
              fill="#D9D9D9"
              stroke="#097B95"
              stroke-width="0.533333"
            />
          </svg>
        </li>
        <li class="dock">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            fill="none"
          >
            <circle
              cx="8"
              cy="8"
              r="7.73333"
              fill="#D9D9D9"
              stroke="#097B95"
              stroke-width="0.533333"
            />
          </svg>
        </li>
        <li class="dock">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            fill="none"
          >
            <circle
              cx="8"
              cy="8"
              r="7.73333"
              fill="#D9D9D9"
              stroke="#097B95"
              stroke-width="0.533333"
            />
          </svg>
        </li>
      </ul>
    </div>

    <div class="container-products" id="container-products">
      <%- include('partials/container-products', { productos: productos }); %>
    </div>

    <%- include('partials/nav-pagination', { page: page, totalPages: totalPages
    }); %> <%- include('partials/footer'); %> <%- include('partials/scripts');
    %>
  </body>
</html>
